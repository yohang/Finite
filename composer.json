{
    "name": "yohang/finite",
    "description": "A simple PHP Finite State Machine",
    "keywords": [
        "statemachine",
        "workflow",
        "state",
        "transition",
        "symfony",
        "bundle"
    ],
    "homepage": "https://github.com/yohang/Finite",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yohan Giarelli",
            "email": "yohan@giarel.li",
            "homepage": "http://yohan.giarel.li"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.40",
        "symfony/var-dumper": ">=5.4,<9",
        "twig/twig": "^3.4",
        "vimeo/psalm": "^6.13.1@dev",
        "symfony/http-kernel": ">=5.4,<9",
        "symfony/framework-bundle": ">=5.4,<9",
        "symfony/event-dispatcher": ">=5.4,<9",
        "symfony/stopwatch": ">=5.4,<9",
        "symfony/twig-bundle": ">=5.4,<9",
        "symfony/browser-kit": ">=5.4,<9",
        "symfony/css-selector": ">=5.4,<9",
        "symfony/console": ">=5.4,<9",
        "friendsofphp/php-cs-fixer": "^3.68",
        "infection/infection": "^0.29.8"
    },
    "autoload": {
        "psr-4": {
            "Finite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Finite\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
